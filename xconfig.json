{
  "log": {
    "loglevel": "debug",
    "dnsLog": true
  },
  "inbounds": [
    {
      "listen": "0.0.0.0",
      "port": 1443,
      "protocol": "vless",
      "settings": {
        "clients": [
          {
            "id": "${CLIENT_UUID}",
            "flow": "xtls-rprx-vision",
            "level": 0
          }
        ],
        "decryption": "none"
      },
      "streamSettings": {
        "network": "tcp",
        "security": "reality",
        "realitySettings": {
          "show": false,
          "dest": "duckduckgo.com:443",
          "xver": 0,
          "serverNames": [
            "duckduckgo.com"
          ],
          "fingerprint": "chrome",
          "privateKey": "${PRIVATE_KEY}",
          "shortIds": ["${SHORT_IDS}"]
        },
        "sniffing": {
          "enabled": false,
          "routeOnly": true
        }
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "freedom",
      "tag": "direct",
      "settings": {
        "domainStrategy": "UseIP"
      }
    },
    {
      "tag": "dns-out",
      "protocol": "dns",
      "settings": {
        "network": "tcp,udp",
        "address": "1.1.1.1",
        "port": 53
      }
    },
    {
      "protocol": "blackhole",
      "tag": "block"
    }
  ],
  "dns": {
    "servers": [
      "https+local://1.1.1.1/dns-query"
    ],
    "queryStrategy": "UseIP",
    "disableCache": false,
    "disableFallback": true,
    "tag": "dns_inbound"
  },
  "routing": {
    "domainStrategy": "IPIfNonMatch",
    "rules": [
      {
        "type": "field",
        "ip": [
          "::/0"
        ],
        "outboundTag": "blackhole"
      },
      {
        "type": "field",
        "port": 53,
        "network": "udp",
        "outboundTag": "dns-out"
      },
      {
        "type": "field",
        "port": 53,
        "network": "tcp",
        "outboundTag": "dns-out"
      },
      {
        "type": "field",
        "ip": ["geoip:private"],
        "outboundTag": "block"
      }
    ]
  }
}
